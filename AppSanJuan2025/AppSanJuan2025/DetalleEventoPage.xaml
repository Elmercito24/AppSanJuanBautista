<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSanJuan2025.DetalleEventoPage"
              BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label x:Name="TituloDia" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />
            <Image x:Name="ImagenEvento" Aspect="AspectFill" HeightRequest="200" />
            <Label x:Name="DetalleDia" FontSize="16" TextColor="Black" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>