<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSanJuan2025.NovenasPage"
             Title="Novenas">

    <Grid>
        <!-- Imagen de fondo que ocupa toda la pantalla -->
        <Image Source="novenas.png" Aspect="AspectFill" HorizontalOptions="Fill" VerticalOptions="Fill" />

        <!-- Texto o descripciÃ³n encima -->
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
            <Label Text="Novenas y Oraciones"
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center"/>
            <Label Text="Reza por tus seres queridos y fortalece tu fe."
                   FontSize="20"
                   TextColor="White"
                   HorizontalTextAlignment="Center"
                   Margin="0,10,0,0"/>
        </StackLayout>
    </Grid>
</ContentPage>