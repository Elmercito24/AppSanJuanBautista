<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSanJuan2025.MainPage"
              Title="San Juan Bautista 2025">


    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">

            <Image Source="sanjuan1.png" Aspect="AspectFill" HeightRequest="250" />

            <Label Text="Bienvenidos a la Feria San Juan Bautista - Chota 2025"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />

            <Label Text="Disfruta del programa de actividades, festivales y tradiciones que nos unen."
               FontSize="16"
               HorizontalTextAlignment="Center" />

            <Button Text="Ingresar al Programa"
                Clicked="OnIngresarClicked"
                BackgroundColor="#2E86C1"
                TextColor="White"
                CornerRadius="10" />


            <Button Text="Marineras" Clicked="OnMarineraClicked" />
            <Button Text="Motocross" Clicked="OnMotocrossClicked" />
            <Button Text="Novenas" Clicked="OnNovenasClicked" />
            
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
