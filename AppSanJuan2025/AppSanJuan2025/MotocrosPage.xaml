<!-- MotocrosPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSanJuan2025.MotocrosPage"
             Title="Motocross">

    <Grid>
        <!-- Imagen de fondo que ocupa toda la pantalla -->
        <Image Source="motocros.png" Aspect="AspectFill" HorizontalOptions="Fill" VerticalOptions="Fill" />

        <!-- Texto o descripción encima -->
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
            <Label Text="¡Vive la emoción del motocross!"
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center"/>
            <Label Text="Desafía los obstáculos y disfruta del deporte extremo."
                   FontSize="20"
                   TextColor="White"
                   HorizontalTextAlignment="Center"
                   Margin="0,10,0,0"/>
        </StackLayout>
    </Grid>
</ContentPage>