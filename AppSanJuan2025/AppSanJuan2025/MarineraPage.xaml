<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSanJuan2025.MarineraPage"
             Title="MarineraPage">

    <Grid>
        <!-- Imagen de fondo que ocupa toda la pantalla -->
        <Image Source="marinera.png" Aspect="AspectFill" HorizontalOptions="Fill" VerticalOptions="Fill" />

        <!-- Texto o descripción que va encima -->
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
            
            <Label Text="¡Bienvenida a la Marinera!"
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center"/>
            
            <Label Text="Disfruta de la tradición peruana y sus bailes folclóricos."
                   FontSize="20"
                   TextColor="White"
                   HorizontalTextAlignment="Center"
                   Margin="0,10,0,0"/>
        </StackLayout>
    </Grid>
</ContentPage>